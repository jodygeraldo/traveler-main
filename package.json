{
	"name": "edgedb-remix",
	"version": "1.0.0",
	"private": true,
	"description": "",
	"license": "",
	"sideEffects": false,
	"scripts": {
		"build": "run-s build:*",
		"build:css": "npm run generate:css -- --minify",
		"build:remix": "remix build",
		"dev": "run-p dev:*",
		"dev:css": "npm run generate:css -- --watch",
		"mock:dev:remix": "cross-env NODE_ENV=development binode --require ./mocks -- @remix-run/dev:remix dev",
		"dev:remix": "cross-env NODE_ENV=development remix dev",
		"format": "prettier --write --cache .",
		"generate:css": "tailwindcss -i ./app/styles/tailwind.css -o ./app/tailwind.css",
		"lint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
		"seed": "tsx dbschema/seed/index.ts",
		"setup": "edgedb migrate && npm run seed",
		"start": "remix-serve build",
		"start:mocks": "binode --require ./mocks -- @remix-run/serve:remix-serve build",
		"test": "run-p test:*",
		"test:unit": "vitest run --coverage",
		"test:integration": "playwright test",
		"typecheck": "tsc -b",
		"validate": "run-p test:* lint typecheck"
	},
	"prettier": {
		"semi": false,
		"singleQuote": true,
		"useTabs": true
	},
	"eslintIgnore": [
		"/node_modules",
		"/build",
		"/public/build",
		"/dbschema/edgeql-js"
	],
	"dependencies": {
		"@headlessui/react": "^1.6.5",
		"@next-boost/hybrid-disk-cache": "^0.3.0",
		"@radix-ui/react-hover-card": "^0.1.6-rc.41",
		"@radix-ui/react-tooltip": "^0.1.8-rc.46",
		"@remix-run/node": "^1.6.0",
		"@remix-run/react": "^1.6.0",
		"@remix-run/serve": "^1.6.0",
		"@remix-run/server-runtime": "^1.6.0",
		"bcryptjs": "^2.4.3",
		"clsx": "^1.1.1",
		"dotenv": "^16.0.1",
		"edgedb": "^0.20.9",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"react-table": "^7.8.0",
		"remix-image": "^1.1.0",
		"remix-image-sharp": "^0.1.1",
		"remix-params-helper": "^0.4.10",
		"remix-utils": "^3.3.0",
		"sharp": "^0.30.7",
		"tiny-invariant": "^1.2.0",
		"zod": "^3.17.3"
	},
	"devDependencies": {
		"@faker-js/faker": "^6.1.1",
		"@playwright/test": "^1.23.1",
		"@remix-run/dev": "^1.6.0",
		"@remix-run/eslint-config": "^1.6.0",
		"@tailwindcss/aspect-ratio": "^0.4.0",
		"@tailwindcss/forms": "^0.5.2",
		"@tailwindcss/typography": "^0.5.2",
		"@testing-library/cypress": "^8.0.3",
		"@testing-library/react": "^13.3.0",
		"@types/bcryptjs": "^2.4.2",
		"@types/eslint": "^8.4.3",
		"@types/node": "^17.0.43",
		"@types/react": "^18.0.14",
		"@types/react-dom": "^18.0.5",
		"@types/react-table": "^7.7.12",
		"@vitejs/plugin-react": "^1.3.2",
		"autoprefixer": "^10.4.7",
		"binode": "^1.0.5",
		"c8": "^7.11.3",
		"cross-env": "^7.0.3",
		"eslint": "^8.15.0",
		"eslint-config-prettier": "^8.5.0",
		"happy-dom": "^5.3.1",
		"npm-run-all": "^4.1.5",
		"postcss": "^8.4.14",
		"prettier": "^2.7.0",
		"prettier-plugin-tailwindcss": "^0.1.11",
		"remix-flat-routes": "^0.4.3",
		"tailwindcss": "^3.1.4",
		"tsx": "^3.4.3",
		"typescript": "^4.6.4",
		"vitest": "^0.15.2"
	},
	"engines": {
		"node": ">=14"
	}
}
