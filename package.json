{
  "name": "traveler-main",
  "version": "0.1.0",
  "description": "Genshin Impact to the max",
  "license": "MIT",
  "sideEffects": false,
  "scripts": {
    "build": "run-s build:*",
    "build:css": "npm run generate:css -- --minify",
    "build:remix": "remix build",
    "predev": "rimraf ./public/build",
    "dev": "run-p dev:*",
    "dev:css": "npm run generate:css -- --watch",
    "dev:remix": "cross-env NODE_ENV=development remix dev",
    "format": "prettier --write --cache .",
    "generate:css": "tailwindcss -i ./app/styles/tailwind.css -o ./app/tailwind.css",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
    "start": "remix-serve build",
    "test": "run-p test:*",
    "test:unit": "vitest run --coverage",
    "test:integration": "playwright test",
    "typecheck": "tsc -b",
    "validate": "run-p test:* lint typecheck"
  },
  "prisma": {
    "seed": "tsx prisma/seed/index.ts"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "eslintIgnore": [
    "/node_modules",
    "/build",
    "/public/build"
  ],
  "dependencies": {
    "@headlessui/react": "^1.6.5",
    "@prisma/client": "^4.1.0",
    "@radix-ui/react-context-menu": "^1.0.0",
    "@radix-ui/react-dialog": "^1.0.0",
    "@radix-ui/react-toolbar": "^1.0.0",
    "@radix-ui/react-tooltip": "^1.0.0",
    "@remix-run/node": "^1.6.5",
    "@remix-run/react": "^1.6.5",
    "@remix-run/serve": "^1.6.5",
    "@remix-run/server-runtime": "^1.6.5",
    "@tanstack/react-table": "^8.3.0",
    "bcryptjs": "^2.4.3",
    "clsx": "^1.2.1",
    "dotenv": "^16.0.1",
    "framer-motion": "^6.5.1",
    "isbot": "^3.5.0",
    "nprogress": "^0.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "redis": "^4.2.0",
    "remix-params-helper": "^0.4.10",
    "remix-utils": "^3.3.0",
    "tiny-invariant": "^1.2.0",
    "zod": "^3.17.9"
  },
  "devDependencies": {
    "@faker-js/faker": "^7.3.0",
    "@playwright/test": "^1.23.4",
    "@remix-run/dev": "^1.6.5",
    "@remix-run/eslint-config": "^1.6.5",
    "@tailwindcss/aspect-ratio": "^0.4.0",
    "@tailwindcss/forms": "^0.5.2",
    "@tailwindcss/typography": "^0.5.4",
    "@testing-library/react": "^13.3.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/eslint": "^8.4.5",
    "@types/node": "^18.0.6",
    "@types/nprogress": "^0.2.0",
    "@types/react": "^18.0.15",
    "@types/react-dom": "^18.0.6",
    "@vitejs/plugin-react": "^2.0.0",
    "autoprefixer": "^10.4.7",
    "c8": "^7.12.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.20.0",
    "eslint-config-prettier": "^8.5.0",
    "happy-dom": "^6.0.4",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.14",
    "prettier": "^2.7.1",
    "prettier-plugin-tailwindcss": "^0.1.12",
    "prisma": "^4.1.0",
    "remix-flat-routes": "^0.4.3",
    "rimraf": "^3.0.2",
    "tailwindcss": "^3.1.6",
    "tailwindcss-radix": "^2.4.0",
    "tsx": "^3.8.0",
    "typescript": "^4.7.4",
    "vitest": "^0.18.1"
  },
  "engines": {
    "node": ">=14"
  }
}
